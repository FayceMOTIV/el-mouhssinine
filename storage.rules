rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images des param√®tres (header, etc.)
    match /settings/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Fichiers des projets
    match /projets/{projetId}/fichiers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Refuser tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
