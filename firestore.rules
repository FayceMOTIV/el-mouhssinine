rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction helper pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Fonction helper pour vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }

    // ==================== COLLECTIONS PUBLIQUES (lecture seule) ====================

    // Annonces - Lecture publique, écriture admin
    match /announcements/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Événements - Lecture publique, écriture admin
    match /events/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Janaza - Lecture publique, écriture admin
    match /janaza/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Projets - Lecture publique, écriture admin
    match /projects/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Popups - Lecture publique, écriture admin
    match /popups/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rappels du jour - Lecture publique, écriture admin
    match /rappels/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Dates islamiques - Lecture publique, écriture admin
    match /dates_islamiques/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings (horaires, infos mosquée) - Lecture publique, écriture admin
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ==================== COLLECTIONS PROTÉGÉES ====================

    // Membres - Lecture par le propriétaire, inscripteur ou admin
    match /members/{memberId} {
      // Helper: vérifie si inscrit par cet utilisateur (avec vérification champ existe)
      function isInscripteur() {
        return 'inscritPar' in resource.data &&
               resource.data.inscritPar != null &&
               'odUserId' in resource.data.inscritPar &&
               resource.data.inscritPar.odUserId == request.auth.uid;
      }

      // Lecture: admin OU propriétaire OU inscripteur (celui qui a inscrit ce membre)
      allow read: if isAdmin() ||
                     request.auth.uid == memberId ||
                     (resource.data.uid == request.auth.uid) ||
                     (request.auth.token.email != null && resource.data.email == request.auth.token.email) ||
                     isInscripteur();
      // Création: utilisateur authentifié avec validation des données
      allow create: if request.auth != null &&
        // Champs obligatoires présents
        request.resource.data.keys().hasAll(['nom', 'prenom', 'email']) &&
        // Validation nom
        request.resource.data.nom is string &&
        request.resource.data.nom.size() > 0 &&
        request.resource.data.nom.size() <= 100 &&
        // Validation prenom
        request.resource.data.prenom is string &&
        request.resource.data.prenom.size() > 0 &&
        request.resource.data.prenom.size() <= 100 &&
        // Validation email basique
        request.resource.data.email is string &&
        request.resource.data.email.matches('.*@.*\\..*') &&
        // SÉCURITÉ: Empêcher création avec status 'actif' (doit passer par paiement)
        (!('status' in request.resource.data) ||
         request.resource.data.status in ['en_attente_paiement', 'en_attente_signature', 'pending']) &&
        (!('statut' in request.resource.data) ||
         request.resource.data.statut in ['en_attente_paiement', 'en_attente_signature', 'pending']);
      // Update: admin peut tout modifier, membres ne peuvent PAS modifier les champs critiques
      allow update: if isAdmin() ||
                       ((request.auth.uid == memberId ||
                         resource.data.uid == request.auth.uid ||
                         (request.auth.token.email != null && resource.data.email == request.auth.token.email) ||
                         isInscripteur()) &&
                        // SÉCURITÉ: Empêcher modification des champs critiques par le membre
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny([
                          'status', 'statut', 'numeroAdherent', 'memberId', 'paiementId',
                          'montantCotisation', 'modePaiement', 'inscritPar', 'datePaiement',
                          'stripePaymentId', 'cotisation'
                        ]));
      // Suppression: admin uniquement
      allow delete: if isAdmin();
    }

    // Dons - Lecture admin, création authentifiée avec validation montant ET userId
    match /donations/{docId} {
      allow read: if isAdmin();
      // Création avec validation du montant (min 1€, max 100000€) et userId
      allow create: if isAuthenticated() &&
        request.resource.data.amount is number &&
        request.resource.data.amount >= 1 &&
        request.resource.data.amount <= 100000 &&
        // SÉCURITÉ: userId doit correspondre à l'utilisateur authentifié (sauf don anonyme)
        (!('userId' in request.resource.data) ||
         request.resource.data.userId == null ||
         request.resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Admins - Lecture admin uniquement, écriture super_admin uniquement
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Messages utilisateurs - SÉCURISÉ: lecture par propriétaire ou admin uniquement
    match /messages/{messageId} {
      // Helper: vérifie si l'utilisateur est le propriétaire du message
      function isMessageOwner() {
        return resource.data.odUserId == request.auth.uid;
      }

      // Lecture: UNIQUEMENT admin OU propriétaire du message
      allow read: if isAdmin() || (isAuthenticated() && isMessageOwner());

      // Création: admin (peut créer pour n'importe quel membre) OU utilisateur authentifié avec validation
      allow create: if isAdmin() ||
        (isAuthenticated() &&
         request.resource.data.odUserId == request.auth.uid &&
         // Champs obligatoires
         request.resource.data.keys().hasAll(['sujet', 'contenu', 'nom', 'email']) &&
         // Validation sujet (max 200 caractères)
         request.resource.data.sujet is string &&
         request.resource.data.sujet.size() > 0 &&
         request.resource.data.sujet.size() <= 200 &&
         // Validation contenu (max 5000 caractères)
         request.resource.data.contenu is string &&
         request.resource.data.contenu.size() > 0 &&
         request.resource.data.contenu.size() <= 5000);

      // Mise à jour: admin (répondre, changer statut) OU propriétaire (ajouter réponse, soft delete)
      allow update: if isAdmin() || (isAuthenticated() && isMessageOwner());

      // Suppression: admin uniquement (les users font du soft delete)
      allow delete: if isAdmin();
    }

    // Notifications (pour le backoffice) - Admin uniquement
    match /notifications/{docId} {
      allow read, write: if isAdmin();
    }

    // Historique des notifications - Admin uniquement
    match /notifications_history/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Écriture uniquement via Cloud Functions
    }

    // Payments (historique des paiements cotisations et dons) - Admin lecture/écriture, app création
    match /payments/{paymentId} {
      allow read: if isAdmin();
      // Création avec validation du montant (min 1€, max 10000€ pour cotisations)
      allow create: if request.auth != null &&
        request.resource.data.montant is number &&
        request.resource.data.montant >= 1 &&
        request.resource.data.montant <= 10000;
      allow update, delete: if isAdmin();
    }

    // ==================== COLLECTIONS CLOUD FUNCTIONS ====================
    // Ces collections sont gérées uniquement par les Cloud Functions (SDK admin)
    // Le SDK admin bypass les rules, mais on les déclare explicitement pour la sécurité

    // Cache horaires de prière - Lecture publique (app), écriture Cloud Functions only
    match /cached_prayer_times/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Paiements traités (idempotence Stripe) - Aucun accès client
    match /processed_payments/{docId} {
      allow read, write: if false;
    }

    // Paiements échoués - Aucun accès client
    match /failed_payments/{docId} {
      allow read, write: if false;
    }

    // Reçus fiscaux - Lecture admin ou propriétaire, écriture Cloud Functions only
    match /recus_fiscaux/{docId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if false;
    }

    // Compteurs (numéros reçus fiscaux) - Aucun accès client
    match /counters/{docId} {
      allow read, write: if false;
    }

    // Rate limits (pour le rate limiting des Cloud Functions) - Aucun accès client
    match /rate_limits/{docId} {
      allow read, write: if false;
    }

    // ==================== RÈGLE PAR DÉFAUT ====================

    // Refuser tout accès non explicitement autorisé
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
